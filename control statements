#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int sod(int num){
    while(num>10){
int sum=0;
    while(num>0){
        sum+=num%10;
        num/=10;
    }
        num=sum;
    }
    return num;
}
int main() {
    long long int number;
    scanf("%lld",&number);
    long long int sum =sod(number);
    printf("%lld",sum);
    

    
    return 0;
}
